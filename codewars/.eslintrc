{
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module"
  },

  "extends": ["plugin:prettier/recommended"],

  "plugins": ["prettier"],

  "rules": {
    "no-unused-vars": 2,
    "no-undef": 2,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
